{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "lib/*": ["./lib/*"],
      "components/*": ["./components/*"],
      "css/*": ["./css/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["**/*.js", "**/*.jsx"],
  "exclude": ["node_modules", "../../build"]
}
